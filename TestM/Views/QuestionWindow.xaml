<Window x:Class="TestM.Views.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestM"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="QuestionWindow" Height="500" Width="1500">
    <Grid>
        <Grid.Resources>
            <local:ConvertToString x:Key="ConvertToString"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                 Color="LightBlue"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" 
                                 Color="LightBlue"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                 Color="Black"/>
        </Grid.Resources>
        <ToolBar VerticalAlignment="Top"
                 Height="40"
                 Background="White"
                 ToolBarTray.IsLocked="True">
            <Button Height="30" Width="100" Margin="6,0,0,0" Background="Aqua" Content="Add"/>
            <Button Height="30" Width="100" Margin="5,0,0,0" Background="Aqua" Content="Delete"/>
        </ToolBar>
        <DataGrid x:Name="dg"
                  Margin="10,40,10,10"
                  FontSize="16"
                  ItemsSource="{Binding ItemSoure}"
                  SelectedItem="{Binding SelectedItem}"
                  SelectedIndex="{Binding SelectedIndex}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  AlternatingRowBackground="White"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Тип вопроса"
                                    Width="0.55*"/>-->
                <DataGridComboBoxColumn Header="Тип вопроса"
                                        Width="0.55*">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.TypeQuestions, RelativeSource={RelativeSource AncestorType=DataGrid, Mode=FindAncestor}}"/>
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=., Converter={StaticResource ConvertToString}}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>    
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.TypeQuestions, RelativeSource={RelativeSource AncestorType=DataGrid, Mode=FindAncestor}}"/>
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=., Converter={StaticResource ConvertToString}}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridTextColumn Header="Вопрос"
                                    Width="2*"
                                    Binding="{Binding Question, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Ответ А"
                                    Width="1.2*"
                                    Binding="{Binding AnswerA, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Ответ Б"
                                    Width="1.2*"
                                    Binding="{Binding AnswerB, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Ответ В"
                                    Width="1.2*"
                                    Binding="{Binding AnswerC, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Ответ Г"
                                    Width="1.2*"
                                    Binding="{Binding AnswerD, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Ответ"
                                    Width="0.27*"
                                    Binding="{Binding RightAnswer, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
